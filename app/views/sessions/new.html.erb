<div class="account-container stacked">

  <div class="content clearfix">

    <%= form_tag sessions_path do %>

      <h1>Giriş Yap</h1>    

      <div class="login-fields">

        <p>Kayıtlı hesabını kullanarak giriş yap:  </p>

        <div class="field">
          <%= text_field_tag :email, nil,  :placeholder => 'Mail Adresi', class: "form-control input-lg username-field" %>
        </div> <!-- /field -->

        <div class="field">
          <%= password_field_tag :password, nil,  :placeholder => 'Şifre', class: "form-control input-lg password-field" %>
        </div> <!-- /password -->

      </div> <!-- /login-fields -->

      <div class="login-actions">

        <span class="login-checkbox">
          <input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
          <label class="choice" for="Field">Beni Hatırla!</label>
        </span>

        <%= submit_tag 'Giriş', class: "login-action btn btn-primary" %>

      </div> <!-- .actions -->

      <div class="login-social">
        <p>Sosyal ağ kullanarak giriş yap: </p>

        <div class="twitter">
          <a href="#" class="btn_1">Twıtter ile giriş</a>        
        </div>

        <div class="fb">
          <a href="#" class="btn_2">Facebook ile giriş</a>       
        </div>
      </div>

    <%end%>

  </div> <!-- /content -->

</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
  Hesabın Yokmmu? <%= link_to 'Kayıt ol!', new_user_path %></br> 
  Remind <a href="#">Password</a>
</div> <!-- /login-extra -->


