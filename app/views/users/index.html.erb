  <% @users.each do |user| %>
    <div class="tab-content">
      <div class="tab-pane fade active in" id="tab-1">
        <strong>Kullanicilar</strong>
        <p><%= user.name %></p>
      </div>
     <%= form_for @user_teams do |f| %>
