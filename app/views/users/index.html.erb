<div class="bs-example">
  <ul class="nav nav-pills">
    <li class="active"><a href="#tab-1" data-toggle="tab">Kullanicilar</a></li>
    <li class=""><a href="#tab-2" data-toggle="tab">Çevirmenler</a></li>
  </ul>
  <% @users.each do |user| %>
    <div class="tab-content">
      <div class="tab-pane fade active in" id="tab-1">
        <% unless user == current_user %>

          <div class="col-md-12">
            <div class="widget stacked widget-table action-table">
              <div class="widget-header">
                <i class="icon-group"></i>
                <h3>Kullanıcılar</h3>
              </div> <!-- /widget-header -->

              <div class="widget-content middle">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>İsim</th>
                      <th>Mail Adresi</th>
                      <th class="td-actions"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="td-actions"><%= user.name %></td>
                      <td class="td-actions"><%= user.email %></td>
                      <td class="td-actions">
                        <%= form_for @user_teams do |f| %>
                          <%= f.hidden_field :user_id, :value => user.id %>
                          <%= f.hidden_field :team_id, :value => current_user.leader_of_team %>
                          <%= f.submit 'Gruba Davet Et', class: 'btn btn-primary'%>
                        <%end%>

                      </td>
                    </tr>
                  </tbody>
                </table>
              </div> <!-- /widget-content -->
            </div> <!-- /widget -->
          </div>
        <%end%>
      <%end%>
    </div>

    <div class="tab-pane fade" id="tab-2">
      <% @translators.each do |translator| %>
        <% unless translator == current_user %>
          <div class="col-md-12">

            <div class="widget stacked widget-table action-table">

              <div class="widget-header">
                <i class="icon-group"></i>
                <h3>Çevirmenler</h3>
              </div> <!-- /widget-header -->

              <div class="widget-content">

                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>İsim</th>
                      <th>Mail Adresi</th>
                      <th class="td-actions"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class  = "td-actions"><%= translator.name %></td>
                      <td class  = "td-actions"><%= translator.email %></td>
                      <td class  = "td-actions">
                        <%= form_for @user_teams, html: { id: 'translator' } do |f| %>
                          <%= f.hidden_field :user_id, :value => translator.id %>
                          <%= f.hidden_field :team_id, :value => current_user.leader_of_team %>
                          <%= f.submit 'Gruba Davet Et', class: 'btn btn-primary'%>
                        <%end%>

                      </td>
                    </tr>
                  </tbody>
                </table>
              </div> <!-- /widget-content -->
            </div> <!-- /widget -->
          </div>
        <%end%>
      <%end%>
    </div>
  </div>
</div>
