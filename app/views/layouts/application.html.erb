<!DOCTYPE html>
<html>
<head>
  <title>Translatr</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if signed_in? %>
    <%= render 'shared/general_nav' %>
    <%= render 'shared/main_nav' %>
  <% elsif signed_in? && translator? %>
    <%= render 'shared/general_nav' %>
    <%= render 'shared/main_nav_for_translators' %>
  <% else %> 
    <%= render 'shared/general_nav_no_login' %>
  <%end%>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
